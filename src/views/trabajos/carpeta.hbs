
    <div class="row">
       
    {{#each trabajos}}
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body ">
                        <a href="/trabajos/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                        <img src="{{imageURL}}" class="card-img-top">
                         <div class="card-body">
                            <h4 class="card-title">
                             {{titulo}}   
                            </h4>
                            <p class="card-text"> {{descripcion}} </p>
                            <form action="/trabajos/delete/{{_id}}?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="btn btn-danger btn-block btn-sm" type="submit">
                                Eliminar
                            </button>
                            </form>
                            </div>
                    </div>
                </div>
            </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h1 class="text-center">Hola {{user.name}}</h1>
                <p class="lead">No has subido tus trabajos a√∫n</p>
                <a href="/trabajos/add" class="btn btn-success btn-block">Sube uno!</a>
            </div>
        </div>
    {{/each}}
   
       
    </div>
              